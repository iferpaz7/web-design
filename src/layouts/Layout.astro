---
export interface Props {
	title?: string;
}

const { title = "Diseño Web para Marketing - ITSAE" } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Presentaciones del curso de Diseño Web para Marketing Digital - ITSAE Ecuador" />
		<title>{title}</title>
		<script is:inline src="/theme-init.js"></script>
	</head>
	<body class="font-sans antialiased bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-300">
		<slot />
		
		<!-- Footer -->
		<footer class="bg-gray-800 dark:bg-gray-950 text-white py-8 mt-12 transition-colors duration-300">
			<div class="max-w-6xl mx-auto px-6 text-center">
				<p class="text-lg font-semibold mb-2">Instituto Tecnológico Superior Adventista del Ecuador</p>
				<p class="text-gray-300 dark:text-gray-400">Diseño Web para Marketing Digital</p>
				<p class="text-sm text-gray-400 dark:text-gray-500 mt-4">© 2024 ITSAE Ecuador - Todos los derechos reservados</p>
			</div>
		</footer>
	</body>
</html>
