---
export interface Props {
	unidad: number;
	titulo: string;
	descripcion: string;
	contenido?: string[];
	color: 'orange' | 'blue' | 'green' | 'purple';
	emoji: string;
}

const { unidad, titulo, descripcion, contenido = [], color, emoji } = Astro.props;

const colorClasses = {
	orange: {
		bg: 'from-orange-50 to-red-50 dark:from-gray-900 dark:to-gray-800',
		header: 'from-itsae-accent to-orange-500 dark:from-orange-600 dark:to-red-600',
		text: 'text-orange-100',
		hover: 'hover:text-white',
		accent: 'bg-orange-50 dark:bg-orange-900/20 border-itsae-accent dark:border-orange-500 text-orange-800 dark:text-orange-300',
		button: 'bg-itsae-accent hover:bg-orange-600 dark:bg-orange-600 dark:hover:bg-orange-700',
		icon: 'bg-orange-100 dark:bg-orange-900/30'
	},
	blue: {
		bg: 'from-primary-50 to-blue-50 dark:from-gray-900 dark:to-gray-800',
		header: 'from-primary-700 to-primary-600 dark:from-primary-800 dark:to-primary-700',
		text: 'text-primary-100',
		hover: 'hover:text-white',
		accent: 'bg-primary-50 dark:bg-primary-900/20 border-primary-500 dark:border-primary-400 text-primary-800 dark:text-primary-300',
		button: 'bg-primary-700 hover:bg-primary-800 dark:bg-primary-600 dark:hover:bg-primary-700',
		icon: 'bg-primary-100 dark:bg-primary-900/30'
	},
	green: {
		bg: 'from-green-50 to-emerald-50 dark:from-gray-900 dark:to-gray-800',
		header: 'from-itsae-success to-emerald-500 dark:from-green-700 dark:to-emerald-600',
		text: 'text-green-100',
		hover: 'hover:text-white',
		accent: 'bg-green-50 dark:bg-green-900/20 border-itsae-success dark:border-green-500 text-green-800 dark:text-green-300',
		button: 'bg-itsae-success hover:bg-green-600 dark:bg-green-600 dark:hover:bg-green-700',
		icon: 'bg-green-100 dark:bg-green-900/30'
	},
	purple: {
		bg: 'from-purple-50 to-pink-50 dark:from-gray-900 dark:to-gray-800',
		header: 'from-purple-500 to-pink-500 dark:from-purple-700 dark:to-pink-600',
		text: 'text-purple-100',
		hover: 'hover:text-white',
		accent: 'bg-purple-50 dark:bg-purple-900/20 border-purple-500 dark:border-purple-400 text-purple-800 dark:text-purple-300',
		button: 'bg-purple-500 hover:bg-purple-600 dark:bg-purple-600 dark:hover:bg-purple-700',
		icon: 'bg-purple-100 dark:bg-purple-900/30'
	}
};

const colors = colorClasses[color];
---

<main class={`min-h-screen bg-gradient-to-br ${colors.bg} transition-colors duration-300`}>
	<header class={`bg-gradient-to-r ${colors.header} text-white py-6 sm:py-8`}>
		<div class="max-w-6xl mx-auto px-4 sm:px-6">
			<nav class="mb-4">
				<a href="/" class={`${colors.text} ${colors.hover} transition-colors text-sm sm:text-base`}>← Volver al inicio</a>
			</nav>
			<h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold mb-2 leading-tight">{titulo}</h1>
			<p class={`text-base sm:text-lg lg:text-xl ${colors.text}`}>Unidad {unidad} - {descripcion}</p>
		</div>
	</header>

	<div class="max-w-4xl mx-auto px-4 sm:px-6 py-8 sm:py-12">
		<div class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl p-6 sm:p-8 text-center transition-colors duration-300">
			<div class="mb-6 sm:mb-8">
				<div class={`w-16 h-16 sm:w-20 sm:h-20 lg:w-24 lg:h-24 ${colors.icon} rounded-full flex items-center justify-center mx-auto mb-4 transition-colors duration-300`}>
					<span class="text-2xl sm:text-3xl lg:text-4xl">{emoji}</span>
				</div>
				<h2 class="text-2xl sm:text-3xl font-bold text-gray-800 dark:text-gray-200 mb-4">Próximamente</h2>
				<p class="text-base sm:text-lg text-gray-600 dark:text-gray-400 mb-6">Este contenido estará disponible próximamente</p>
			</div>

			{contenido.length > 0 && (
				<div class={`${colors.accent} p-4 sm:p-6 rounded-lg border-l-4 mb-6 sm:mb-8 transition-colors duration-300`}>
					<h3 class="text-lg sm:text-xl font-semibold mb-3">Contenido Planificado</h3>
					<ul class="text-left space-y-2 text-sm sm:text-base">
						{contenido.map(item => (
							<li>• {item}</li>
						))}
					</ul>
				</div>
			)}

			<a href="/" class={`${colors.button} text-white px-4 sm:px-6 py-2 sm:py-3 rounded-lg transition-colors text-sm sm:text-base inline-block`}>
				Volver al inicio
			</a>
		</div>
	</div>
</main>