	<main>
		<!-- Navegación -->
		<div class="bg-gradient-to-r from-blue-500 to-green-500 text-white py-4">
			<div class="max-w-6xl mx-auto px-6">
				<nav class="flex items-center justify-between">
					<a href="/" class="text-blue-100 hover:text-white transition-colors">← Volver al inicio</a>
