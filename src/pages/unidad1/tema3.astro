---
import Layout from '../../layouts/Layout.astro';
import PresentacionTema3 from '../../components/PresentacionTema3';
---

<Layout title="Tema 3: Arquitectura de Información, Accesibilidad y Usabilidad - ITSAE">
	<main>
		<!-- Navegación -->
		<div class="bg-gradient-to-r from-blue-500 to-green-500 text-white py-4">
			<div class="max-w-6xl mx-auto px-6">
				<nav class="flex items-center justify-between">
					<a href="/" class="text-blue-100 hover:text-white transition-colors">← Volver al inicio</a>
					<div class="text-center">
						<h1 class="text-xl font-bold">Unidad 1 - Tema 3</h1>
						<p class="text-sm text-blue-100">Arquitectura de Información, Accesibilidad y Usabilidad</p>
					</div>
					<div class="text-right text-sm text-blue-100">
						<p>Semana 3</p>
						<p>ITSAE</p>
					</div>
				</nav>
			</div>
		</div>

		<!-- Presentación -->
		<PresentacionTema3 client:load />
	</main>
</Layout>
